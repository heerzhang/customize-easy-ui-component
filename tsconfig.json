{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es2016", "es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2015",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowJs": false,
    "importHelpers": true
  },
  "exclude": [
    ".vscode",
    "dist",
    "node_modules",
    "stories",
    "tests",
    "esm",
    "src/**/__tests__"
  ],
  "include": [
    "src/**/*"
  ]
}
